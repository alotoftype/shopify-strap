<div class="cart-page__item-header row justify-content-between py-2 bg-smoke">
   <div class="col-10 col-sm-7 col-md-5">
      PRODUCT
   </div>
   <div class="col-2 d-none d-md-block">
      SIZE
   </div>
   <div class="col-2">
      QTY
   </div>
   <div class="col-2  d-none d-sm-block">
     PRICE
   </div>
</div>
{% for item in cart.items %}
   <div class="cart-page__item row justify-content-between align-items-center py-3">
      <div class="col-10 col-sm-7 col-md-5">
         <div class="row">
            <div class="col-auto">
               <a href="{{ item.url | within: collections.all }}" itemprop="contentUrl">
                  <img srcset="{{ item | img_url: 'large' }}" alt="{{ item.title | escape }}" class="img-fluid">
               </a>
            </div>
            <div class="col align-self-center pl-0">
               <a href="{{ item.url }}">
                  {{ item.product.title }}
               </a>
                {% unless item.properties['Free Beanie'] == empty %}
                     <span class="d-block vendor">
                        + {{ item.properties['Free Beanie'] }} BEANIE
                     </span>
               {% else %}
                  <span class="d-block vendor">
                     {{ item.product.vendor }}
                  </span>
               {% endunless %}
               <span class="d-block d-md-none pt-1">
                  {{ item.variant.title }}
               </span>
                <span class="price pt-1 d-block d-sm-none">
                  {{ item.price | money }}
               </span>
            </div>
         </div>
      </div>
      <div class="col-2 d-none d-md-block">
         {{ item.variant.title }}
      </div>
      <div class="col-2 align-self-center">
         <b>{{ item.quantity }}</b>
      </div>
      <div class="col-3 col-sm-2 align-self-center d-none d-sm-block">
        <span class="price">{{ item.price | money }}</span>
      </div>
      <div class="d-none col-1 col-sm-2 align-self-center text-center">
         <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0">
            X
         </a>
      </div>
   </div>
{% endfor %}
